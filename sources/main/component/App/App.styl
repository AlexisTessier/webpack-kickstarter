App__$centeredBlockWidth = 1650px + ( 72 * 2 )

.App-header
	position relative
	display block
	padding-horizontal 20px
	z-index 50

.App-footer
	layout__centered(App__$centeredBlockWidth)
	padding-bottom 40px

.App-content+.App-footer
	margin-top 95px
	
.size-class-width-compact
	.App-content+.App-footer
		margin-top 80px

.App-content
	layout__centered(App__$centeredBlockWidth)

.App-modal-wrapper
	position relative
	top 0
	left 0
	z-index 800

.App-content
	position relative
	&.loading
		&:after
			display block
			content ''
			width 100%
			height 100%
			background-color white
			position absolute
			top 0
			left 0
			z-index 8000
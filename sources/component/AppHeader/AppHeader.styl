#root
	//root style here is related to the .AppHeader height
	margin-top: ( 100px + 80 + 20 + 50 )
	
.AppHeader
	clearfix()
	height 100px
	text-align center
	padding 0 0 100px 0
	position fixed
	width 100%
	z-index 500
	top 0
	left 0
	
_clipPath = polygon(
	0% 0%, 100% 0%,
	100% 100%,
		99% 98%,
			97% 94%,
				94% 87%,
				6% 87%,
			3% 94%,
		1% 98%,
	0% 100%
)

.AppHeader-background
	display block
	position absolute
	z-index 0
	height 100%
	width 100%
	border 0
	-webkit-clip-path: _clipPath
	clip-path: _clipPath
	overflow hidden
	
.AppHeader-background-texture,
.AppHeader-background-shadow
	display block
	position absolute
	top 0
	left 0
	width 100%

.AppHeader-background-shadow
	height 100%
	background-color darken(_color_dark_brick, 10)
	background-image url('./brick-texture.jpg')
	background-blend-mode multiply
	background-position 25px center
	
.AppHeader-background-texture
	-webkit-clip-path: _clipPath
	clip-path: _clipPath
	height 97.5%
	background-color _color_dark_brick
	background-image url('./brick-texture.jpg')
	background-blend-mode overlay
	background-position center center

.AppHeader svg
	display none

.AppHeader-inner-wrapper
	padding-horizontal: ( 20px + ( spriteLogoFolioJunior.width ) )
	position relative 
	z-index 5
	padding-top 20px
	
.AppHeader-logo-folio-junior
	font-size 0
	display block
	position absolute
	left 20px
	top 20px
	padding 8px
	background-color darken(_color_dark_blue, 12)
	border-radius 5px
	overflow hidden
	box-shadow 1px 1px 1px black
	
	&::before
		border-radius 2px
		border 1px solid white
		content ""
		sprite_logo_folio_junior()
		mix-blend-mode: exclusion
		
	&::after
		content ''
		display block
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-image url('~assets/images/noise.jpg')
		mix-blend-mode: darken
		
	&:hover, &:focus
		&::before
			mix-blend-mode: normal

.AppHeader-title
	display block
	color white
	margin-horizontal 20px
	font__line-height 40
	font__rem-size 32
	font__letter-spacing 100

.AppHeader-help-button
	help_color_light = rgba(255,255,255,0.9)
	text-decoration none
	background-color rgba(0,0,0,0.5)
	font-size 0
	display block
	height 40px
	width 40px
	float none
	position absolute
	top 20px
	right 20px
	border 2px solid help_color_light
	border-radius 50%
	line-height 40px
	text-align center
	font-size 0

	&::before
		content "?"
		color help_color_light
		font-size 30px
	
	&:hover, &:focus
		border-color white
		background-color rgba(0,0,0,0.4)